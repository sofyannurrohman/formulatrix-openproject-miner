@model OpenProductivity.Web.DTOs.MemberTaskDetailsResponseDto
@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Member Tasks";
}
@if (Model?.Tasks != null && Model.Tasks.Any())
{
    <div class="overflow-x-auto">
        <table id="tasksTable" class="min-w-full bg-white border border-gray-200 rounded-md shadow-md">
            <thead class="bg-blue-500">
                <tr>
                    <th class="px-4 py-2 text-white text-center">Work Package ID</th>
                    <th class="px-4 py-2 text-white text-center">Type</th>
                    <th class="px-4 py-2 text-white text-center">Subject</th>
                    <th class="px-4 py-2 text-white text-center">Start</th>
                    <th class="px-4 py-2 text-white text-center">End</th>
                    <th class="px-4 py-2 text-white text-center">Duration (days)</th>
                    <th class="px-4 py-2 text-white text-center">Status History</th>
                    <th class="px-4 py-2 text-white text-center">Notes</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
                @foreach (var task in Model.Tasks)
                {
                    <tr>
                        <td class="px-4 py-2">@task.WorkPackageId</td>
                        <td class="px-4 py-2">@task.Type</td>
                        <td class="px-4 py-2">@task.Subject</td>
                        <td class="px-4 py-2">
                            @(task.Start.HasValue && task.Start.Value != DateTime.MinValue
                                                ? task.Start.Value.ToString("dd MMM yyyy")
                                                : "Not set")
                        </td>
                        <td class="px-4 py-2">@task.End?.ToString("dd MMM yyyy")</td>
                        <td class="px-4 py-2">@task.DurationDays?.ToString("0.##")</td>
                        <td class="px-4 py-2">@task.StatusHistory</td>
                        <td class="px-4 py-2">@task.Notes</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <p class="text-gray-500 mt-4">No tasks found for this member.</p>
}
