@model OpenProjectProductivity.Web.ViewModels.LoginViewModel
@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Login";
}

<div class="min-h-screen flex items-center justify-center bg-gray-100">
    <div class="bg-white p-8 rounded shadow-md w-full max-w-md">
        <h1 class="text-2xl font-bold mb-6 text-center">Login</h1>

        <form  asp-controller="Auth" asp-action="Login" method="post" class="space-y-4">
        @Html.AntiForgeryToken()
            <div>
                <label asp-for="UserName" class="block text-sm font-medium text-gray-700">Username</label>
                <input asp-for="UserName" class="mt-1 block w-full border border-gray-300 rounded-md p-2 focus:ring-blue-500 focus:border-blue-500" />
                <span asp-validation-for="UserName" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="Password" class="block text-sm font-medium text-gray-700">Password</label>
                <input asp-for="Password" type="password" class="mt-1 block w-full border border-gray-300 rounded-md p-2 focus:ring-blue-500 focus:border-blue-500" />
                <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
            </div>

            <div class="flex items-center">
                <input asp-for="RememberMe" class="mr-2" />
                <label asp-for="RememberMe" class="text-sm text-gray-700">Remember me</label>
            </div>

            <button type="submit" class="w-full bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600">
                Login
            </button>

            <p class="text-sm text-gray-600 mt-2 text-center">
                Don't have an account? <a asp-action="Register" class="text-blue-500 hover:underline">Register</a>
            </p>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
