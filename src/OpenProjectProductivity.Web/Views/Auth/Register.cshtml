@model OpenProjectProductivity.Web.ViewModels.RegisterViewModel
@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Register";
    ViewData["LayoutType"] = "auth";
}

<div class="card shadow-xl bg-white">
    <div class="card-body">
        <h1 class="mb-2 font-semibold text-gray-800 text-lg sm:text-title-lg">
            Create an Account
        </h1>
        <p class="text-sm text-gray-500">
            Fill in the details to register a new account
        </p>

        @* Validation summary (server side errors) *@
        <div asp-validation-summary="ModelOnly" class="alert alert-error mb-4 hidden" role="alert"></div>

        <form asp-action="Register" asp-controller="Auth" method="post" class="space-y-4" novalidate>
            @Html.AntiForgeryToken()

            <!-- Username -->
            <div class="form-control">
                <label asp-for="UserName" class="label">
                    <span class="label-text text-md text-black">Username</span>
                </label>
                <input asp-for="UserName"
                    class="h-11 w-full rounded-lg border border-gray-300 bg-transparent py-2.5 pl-4 text-sm text-gray-800 placeholder:text-gray-400 focus:border-brand-300 focus:outline-hidden focus:ring-3 focus:ring-brand-500/10"
                    placeholder="Enter your username" />
                <span asp-validation-for="UserName" class="text-error text-sm mt-1"></span>
            </div>

            <!-- Email -->
            <div class="form-control">
                <label asp-for="Email" class="label">
                    <span class="label-text text-md text-black">Email</span>
                </label>
                <input asp-for="Email" type="email"
                    class="h-11 w-full rounded-lg border border-gray-300 bg-transparent py-2.5 pl-4 text-sm text-gray-800 placeholder:text-gray-400 focus:border-brand-300 focus:outline-hidden focus:ring-3 focus:ring-brand-500/10"
                    placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-error text-sm mt-1"></span>
            </div>

            <!-- Password -->
            <div class="form-control">
                <label asp-for="Password" class="label">
                    <span class="label-text text-md text-black">Password</span>
                </label>
                <input asp-for="Password" type="password"
                    class="h-11 w-full rounded-lg border border-gray-300 bg-transparent py-2.5 pl-4 text-sm text-gray-800 placeholder:text-gray-400 focus:border-brand-300 focus:outline-hidden focus:ring-3 focus:ring-brand-500/10"
                    placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-error text-sm mt-1"></span>
            </div>

            <!-- Confirm Password -->
            <div class="form-control">
                <label asp-for="ConfirmPassword" class="label">
                    <span class="label-text text-md text-black">Confirm Password</span>
                </label>
                <input asp-for="ConfirmPassword" type="password"
                    class="h-11 w-full rounded-lg border border-gray-300 bg-transparent py-2.5 pl-4 text-sm text-gray-800 placeholder:text-gray-400 focus:border-brand-300 focus:outline-hidden focus:ring-3 focus:ring-brand-500/10"
                    placeholder="Confirm your password" />
                <span asp-validation-for="ConfirmPassword" class="text-error text-sm mt-1"></span>
            </div>


            <div class="form-control">
                <button type="submit"
                    class="btn bg-black text-white w-full hover:bg-orange-500 hover:text-black active:bg-gray-400 active:text-black">
                    Sign up
                </button>
            </div>

            <p class="text-sm text-center">
                Already have an account?
                <a asp-action="Login" class="link link-neutral hover:text-orange-500">Login</a>
            </p>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}